<div class="holder">
    <div class="contenedor-login" style="margin:100px auto">
        <div class="col-6-offset-3">
            <h4>Usted va a modificar una Novedad</h4>
            <form action="/admin/novedades/modificar" method="post"
            enctype="multipart/form-data">
                <input type="hidden" value="{{novedad.id}}" name="id">{{!este INPUT siempre dentro del formulario}}
                <div class="mb-3 row">
                    <label for=""><h6>Titulo</h6></label>
                    <input type="text" class="form-control" name="titulo" value="{{novedad.titulo}}">
                </div>
                <div class="mb-3 row">
                    <label for=""><h6>Subtitulo</h6></label>
                    <input type="text" class="form-control" name="subtitulo" value="{{novedad.subtitulo}}">
                </div>

                <div class="mb-3 row">
                    <p>
                    <label>Imagen: <input type="file" name="imagen" 
                    id="imagen" /></label>
                    </p>
                    <p>
                    <label><input type="checkbox" name="img_delete" 
                    id="img_delete" value="1">Eliminar imagen actual?</label>
                    <input type="hidden" name="img_original" value="{{novedad.img_id}}">
                    </p>
                </div>

                <div class="mb-3 row">
                    <label for=""><h6>Cuerpo</h6></label>
                    <textarea name="cuerpo" class="form-control">{{novedad.cuerpo}}</textarea>
                </div>
                <div class="boton">
                    <button type="submit" class="btn btn-primary">Modificar</button>
                </div>
            </form>
             {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>